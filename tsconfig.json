{
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2021"],
        "target": "es2021",
        "declaration": true,
        "incremental": true,
        "sourceMap": true,

        "paths": {
            "@/*": ["./src/*"],
        }
    }
}
